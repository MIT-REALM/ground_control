<!--
    Launch the f1tenth stack on the F1Tenth platform and the turtlebot stack on each
    of the turtlebots.
-->

<launch>
    <arg name="base_path" default="$(find rgc_control)/saved_policies/base"/>
    <arg name="traj_filepath" default="ego_traj_nominal_1.pkl"/>

    <arg name="scale" default="1.0"/>
    <arg name="x_offset" default="0.0"/>
    <arg name="y_offset" default="0.0"/>

    <!-- <arg name="scale" default="0.6"/>
    <arg name="x_offset" default="-4.0"/>
    <arg name="y_offset" default="-0.5"/> -->

    <arg name="T" default="12"/>
    <arg name="v_ref" default="1.0"/>

    <!-- Start the F1Tenth stack -->
    <include file="$(find rgc)/launch/tro_f1tenth.launch">
        <arg name="base_path" default="$(arg base_path)"/>
        <arg name="traj_filepath" default="$(arg traj_filepath)"/>

        <arg name="position_topic" default="/vicon/realm_f1tenth/realm_f1tenth"/>

        <arg name="T" default="$(arg T)"/>
        <arg name="v_ref" default="$(arg v_ref)"/>

        <arg name="scale" default="$(arg scale)"/>
        <arg name="x_offset" default="$(arg x_offset)"/>
        <arg name="y_offset" default="$(arg y_offset)"/>
    </include>
</launch>